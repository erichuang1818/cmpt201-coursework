#include <stdio.h>
#include <pthread.h>

int cnt;

void *func(void *arg){
  for(int i = 0; i < 10000000000; i++)
  cnt++;
}


int main(){


  pthread_t tid;
  void* res;
  int s;
  pthread_create(&tid, NULL, func, "hello vro\n");
  pthread_create(&tid, NULL, func, "hello vro...\n");
  pthread_join(tid, res);

  s = pthread_join(tid, &res);
  if(s != 0) 
    perror("pthread join");

  printf("cnt%d");
}
